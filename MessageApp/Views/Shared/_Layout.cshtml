<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Be Happy!</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/MessageStyles.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="above-above-navbar"></div>
        <div class="above-navbar">
            <span class="circle">
                @Html.ActionLink("Be Happy!", "Index", "Messages", new { @class = "brand-link" })
            </span>
        </div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="above-navbar"></div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>*@
        @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        @*</footer>*@

    </div>
    <div class="footer-topbar">
    </div>
    <div class="footer-bottombar">
        <img class="footer-image" src="~/Img/footer-img.jpg" />
        <span class="gray-circle gray-circle-left">
            @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "footer-link" })
        </span>
        <span class="gray-circle gray-circle-middle">
            @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "footer-link" })
        </span>
        <span class="gray-circle gray-circle-right">
            @Html.ActionLink("Ratings", "Contact", "Home", new { area = "" }, new { @class = "footer-link" })
        </span>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
